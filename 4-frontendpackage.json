{
  "name": "frontend",
  "version": "1.0.0",
  "main": "index.js",
  "dependencies": {
    "axios": "^1.4.0", // Axios for making HTTP requests
    "react": "^18.2.0", // React library for building UI
    "react-dom": "^18.2.0", // React DOM for rendering React components
    "react-scripts": "5.0.1" // Scripts for managing the React app
  },
  "scripts": {
    "start": "react-scripts start", // Command to start the development server
    "build": "react-scripts build", // Command to build the app for production
    "test": "react-scripts test", // Command to run tests
    "eject": "react-scripts eject" // Command to eject configuration (not recommended for beginners)
  },
  "eslintConfig": {
    "extends": [
      "react-app", // Default ESLint configuration for React apps
      "react-app/jest" // Configuration for Jest tests
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%", // Target browsers with more than 0.2% usage
      "not dead", // Exclude dead browsers
      "not op_mini all" // Exclude Opera Mini
    ],
    "development": [
      "last 1 chrome version", // Target the latest version of Chrome for development
      "last 1 firefox version", // Target the latest version of Firefox for development
      "last 1 safari version" // Target the latest version of Safari for development
    ]
  }
}
